@model Country

@{
    ViewData["Title"] = "Countries / Country Add";

}

@section addcss{
    <style>
        label {
            border-color: transparent !important;
            color: black !important;
            background-color: transparent !important;
        }
    </style>
 }

<div class="container p-5">
    <h2 class="text-dark">Create Country</h2>


    <div class="form-group">
        <form method="post" asp-action="Add" enctype="multipart/form-data">
            @if (!string.IsNullOrWhiteSpace(ViewBag.Err))
            {
                <div class="col-md-12 form-control bg-transparent border-0">@ViewBag.Err</div>
            }
            <div class="col-md-12 form-control bg-transparent border-0" asp-validation-summary="All"></div>


            <div class="form-group">
                <label class="form-control">Name</label>
                <input required asp-for="Name" class="form-control text-dark" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="form-control">Country Code(key)</label>
                <input required asp-for="CountryCode" class="form-control text-dark" />
                <span asp-validation-for="CountryCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="form-control">Language</label>
                <input required asp-for="Language" class="form-control text-dark" />
                <span asp-validation-for="Language" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="form-control">Currency</label>
                <input required asp-for="Currency" class="form-control text-dark" />
                <span asp-validation-for="Currency" class="text-danger"></span>
            </div>

            <div class="d-flex my-5">
                <input class="btn btn-primary" type="submit" value="Add" />
                <a asp-action="index" class="btn btn-success">Back</a>
            </div>



        </form>

    </div>

</div>