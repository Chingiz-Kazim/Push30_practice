    <script>

        $('.custom-file-input-for-favicon').on('change', function () {
            var fileName = $(this).val();
            console.log(fileName);
            readURLs(this);




        });



        function readURLs(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();

                reader.onload = function (e) {

                    console.log(e.target.result);
                    $('#plusIcon').text("");
                    $('#createdImageForFavicon').css("display", "block");

                    $('#createdImageForFavicon').attr('src', e.target.result);
                }

                reader.readAsDataURL(input.files[0]);
            }
        }




        $('.custom-file-input-for-logo').on('change', function () {
            var fileName = $(this).val();
            console.log(fileName);
            readURL(this);




        });



        function readURL(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();

                reader.onload = function (e) {

                    console.log(e.target.result);
                    $('#plusLogo').text("");
                    $('#createdImageForLogo').css("display", "block");

                    $('#createdImageForLogo').attr('src', e.target.result);
                }

                reader.readAsDataURL(input.files[0]);
            }
        }




    </script>
